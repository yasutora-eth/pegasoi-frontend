# Production Environment Configuration
# This file should be used for production deployment

# ----- Backend API Configuration -----
NEXT_PUBLIC_API_URL=https://pegasoibackend-production.up.railway.app
NEXT_PUBLIC_GRAPHQL_URL=https://pegasoibackend-production.up.railway.app/graphql
NEXT_PUBLIC_USE_GRAPHQL=true

# ----- Application Configuration -----
NEXT_PUBLIC_APP_NAME=Pegasoi Research Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=production

# ----- Performance Configuration -----
NEXT_PUBLIC_ENABLE_REDIS_CACHE=true
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS=300
NEXT_PUBLIC_POLLING_INTERVAL_MS=60000

# ----- Feature Flags -----
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_OPTIMISTIC_UPDATES=true

# ----- Security Configuration -----
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_CORS_VALIDATION=true

# ----- Monitoring Configuration -----
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# ----- Clerk Authentication (Production) -----
# These should be set in your deployment platform (Railway, Vercel, etc.)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
# CLERK_SECRET_KEY=sk_live_...

# ----- Analytics (Optional) -----
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-...
# NEXT_PUBLIC_POSTHOG_KEY=phc_...

# ----- Error Reporting (Optional) -----
# NEXT_PUBLIC_SENTRY_DSN=https://...
