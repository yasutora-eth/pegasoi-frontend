{
  "name": "pegasoi-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Web3 frontend for Pegasoi Research Platform - Academic research discovery with blockchain integration",
  "keywords": ["research", "academic", "web3", "blockchain", "nextjs", "shadcn"],
  "author": "yasutora-eth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yasutora-eth/pegasoi-frontend.git"
  },
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "node scripts/run-tests.js",
    "prepare": "husky install",
    
    "dev:turbo": "next dev --turbo",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:standalone": "next build && next export",
    
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    
    "test:watch": "node scripts/run-tests.js --watch",
    "test:coverage": "node scripts/run-tests.js --coverage",
    "test:components": "node scripts/run-tests.js components",
    "test:pages": "node scripts/run-tests.js pages",
    "test:e2e": "echo 'E2E tests to be implemented'",
    
    "web3:dev": "echo 'Web3 development mode - to be implemented by Web3 expert'",
    "web3:test": "echo 'Web3 integration tests - to be implemented'",
    "contracts:compile": "echo 'Smart contract compilation - to be implemented'",
    "contracts:test": "echo 'Smart contract tests - to be implemented'",
    "contracts:deploy": "echo 'Smart contract deployment - to be implemented'",
    "ipfs:upload": "echo 'IPFS file upload utility - to be implemented'",
    
    "nextjs:analyze": "echo 'Next.js bundle analysis - to be implemented'",
    "nextjs:lighthouse": "echo 'Lighthouse performance testing - to be implemented'",
    "nextjs:build-stats": "echo 'Next.js build statistics - to be implemented'",
    
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit",
    "deps:fix": "npm audit fix",
    
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules pnpm-lock.yaml && pnpm install",
    
    "docker:build": "docker build -t pegasoi-frontend .",
    "docker:run": "docker run -p 3000:3000 pegasoi-frontend",
    
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.454.0",
    "next": "14.2.16",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.0",
    "@hookform/resolvers": "^3.3.0",
    "axios": "^1.7.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.16",
    "postcss": "^8.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,css,md}": ["prettier --write"]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
